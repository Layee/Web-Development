<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add New Comment <%= campground.name %></h1>

        <div style="margin:50px auto; width:30%;">
            <form action="/campgrounds/ <%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[author" placeholder="Author Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="Text" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>